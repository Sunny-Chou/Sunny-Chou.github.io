	 <script>
	     // 檢查 localStorage 中的標誌或訊息
		var showHiddenPage = localStorage.getItem('showHiddenPage');
		if (showHiddenPage === 'true') {
			var hiddenPage = document.getElementById('hiddenPage');
			hiddenPage.classList.remove('hidden-page');
		}
		function press() {
