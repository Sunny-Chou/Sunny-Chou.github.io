<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClientWin">
    <HorizontalScrollView
        android:id="@+id/sc"
        app:layout_constrainedHeight="true"
        app:layout_constrainedWidth="true"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
            <TextView
                android:id="@+id/expression"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="20dp"
                android:gravity="center"
                android:maxLines="1"
                android:text=""
                android:textSize="20sp" />
    </HorizontalScrollView>
    <TextView
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="60sp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sc" />
    <Button
        android:id="@+id/percent"
        android:layout_width="90dp"
        android:layout_height="65dp"
        android:backgroundTint="#F1F1F1"
        android:baselineAligned="false"
        android:gravity="center"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toBottomOf="@id/sc"
        app:layout_constraintEnd_toStartOf="@id/CE"
        android:includeFontPadding="false"
        android:insetTop="2dp"
        android:insetBottom="2dp"
        android:text="%"
        android:textColor="#C3C3C3"
        android:textColorHint="#C3C3C3"
        android:textSize="20dp"
        app:iconPadding="0dp"
        app:strokeColor="#C3C3C3"
        app:strokeWidth="1dp" />
    <Button
        android:id="@+id/CE"
        android:layout_width="90dp"
        android:layout_height="65dp"
        android:backgroundTint="#F1F1F1"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toBottomOf="@id/sc"
        app:layout_constraintEnd_toStartOf="@id/C"
        android:insetTop="2dp"
        android:insetBottom="2dp"
        android:text="CE"
        android:textColor="#C3C3C3"
        android:textSize="20dp"
        app:strokeColor="#C3C3C3"
        app:strokeWidth="1dp" />
    <Button
        android:id="@+id/C"
        android:layout_width="90dp"
        android:layout_height="65dp"
        android:backgroundTint="#F1F1F1"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toBottomOf="@id/sc"
        app:layout_constraintEnd_toStartOf="@id/X"
        android:insetTop="2dp"
        android:insetBottom="2dp"
        android:text="C"
        android:textColor="#C3C3C3"
        android:textSize="20dp"
        app:strokeColor="#C3C3C3"
        app:strokeWidth="1dp" />
    <Button
        android:id="@+id/X"
        android:layout_width="90dp"
        android:layout_height="65dp"
        android:backgroundTint="#F1F1F1"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toBottomOf="@id/sc"
        app:layout_constraintEnd_toEndOf="@id/number"
        android:insetTop="2dp"
        android:insetBottom="2dp"
        android:textColor="#C3C3C3"
        android:textSize="20dp"
        app:icon="@android:drawable/ic_input_delete"
        app:iconGravity="textEnd"
        app:iconPadding="-1dp"
        app:iconTint="#C3C3C3"
        app:iconTintMode="src_in"
        app:strokeColor="#C3C3C3"
        app:strokeWidth="1dp" />
    <Button
        android:id="@+id/reciprocal"
        android:layout_width="90dp"
        android:layout_height="65dp"
        android:backgroundTint="#F1F1F1"
        app:layout_constraintTop_toBottomOf="@id/X"
        app:layout_constraintEnd_toStartOf="@id/sqr"
        android:insetTop="2dp"
        android:insetBottom="2dp"
        android:text="1/x"
        android:textColorHint="#C3C3C3"
        android:textColor="#C3C3C3"
        android:textSize="20dp"
        app:strokeColor="#C3C3C3"
        app:strokeWidth="1dp" />
    <Button
        android:id="@+id/sqr"
        android:layout_width="90dp"
        android:layout_height="65dp"
        android:backgroundTint="#F1F1F1"
        app:layout_constraintTop_toBottomOf="@id/X"
        app:layout_constraintEnd_toStartOf="@id/sqrt"
        android:insetTop="2dp"
        android:insetBottom="2dp"
        android:text="x2"
        android:textColor="#C3C3C3"
        android:textSize="20dp"
        app:strokeColor="#C3C3C3"
        app:strokeWidth="1dp" />
    <Button
        android:id="@+id/sqrt"
        android:layout_width="90dp"
        android:layout_height="65dp"
        android:backgroundTint="#F1F1F1"
        app:layout_constraintTop_toBottomOf="@id/X"
        app:layout_constraintEnd_toStartOf="@id/div"
        android:insetTop="2dp"
        android:insetBottom="2dp"
        android:text="2√x"
        android:textColor="#C3C3C3"
        android:textSize="20dp"
        app:strokeColor="#C3C3C3"
        app:strokeWidth="1dp" />
    <Button
        android:id="@+id/div"
        android:layout_width="90dp"
        android:layout_height="65dp"
        android:backgroundTint="#F1F1F1"
        app:layout_constraintTop_toBottomOf="@id/X"
        app:layout_constraintEnd_toEndOf="@id/number"
        android:insetTop="2dp"
        android:insetBottom="2dp"
        android:text="÷"
        android:textColor="#C3C3C3"
        android:textSize="20dp"
        app:strokeColor="#C3C3C3"
        app:strokeWidth="1dp" />
    <Button
        android:id="@+id/n7"
        android:layout_width="90dp"
        android:layout_height="65dp"
        android:backgroundTint="#F1F1F1"
        app:layout_constraintTop_toBottomOf="@id/div"
        app:layout_constraintEnd_toStartOf="@id/n8"
        android:insetTop="2dp"
        android:insetBottom="2dp"
        android:text="7"
        android:textColorHint="#C3C3C3"
        android:textColor="#C3C3C3"
        android:textSize="20dp"
        app:strokeColor="#C3C3C3"
        app:strokeWidth="1dp" />
    <Button
        android:id="@+id/n8"
        android:layout_width="90dp"
        android:layout_height="65dp"
        android:backgroundTint="#F1F1F1"
        app:layout_constraintTop_toBottomOf="@id/div"
        app:layout_constraintEnd_toStartOf="@id/n6"
        android:insetTop="2dp"
        android:insetBottom="2dp"
        android:text="8"
        android:textColor="#C3C3C3"
        android:textSize="20dp"
        app:strokeColor="#C3C3C3"
        app:strokeWidth="1dp" />
    <Button
        android:id="@+id/n9"
        android:layout_width="90dp"
        android:layout_height="65dp"
        android:backgroundTint="#F1F1F1"
        app:layout_constraintTop_toBottomOf="@id/div"
        app:layout_constraintEnd_toStartOf="@id/mul"
        android:insetTop="2dp"
        android:insetBottom="2dp"
        android:text="9"
        android:textColor="#C3C3C3"
        android:textSize="20dp"
        app:strokeColor="#C3C3C3"
        app:strokeWidth="1dp" />
    <Button
        android:id="@+id/mul"
        android:layout_width="90dp"
        android:layout_height="65dp"
        android:backgroundTint="#F1F1F1"
        app:layout_constraintTop_toBottomOf="@id/div"
        app:layout_constraintEnd_toEndOf="@id/number"
        android:insetTop="2dp"
        android:insetBottom="2dp"
        android:text="×"
        android:textColor="#C3C3C3"
        android:textSize="20dp"
        app:strokeColor="#C3C3C3"
        app:strokeWidth="1dp" />
    <Button
        android:id="@+id/n4"
        android:layout_width="90dp"
        android:layout_height="65dp"
        android:backgroundTint="#F1F1F1"
        app:layout_constraintTop_toBottomOf="@id/mul"
        app:layout_constraintEnd_toStartOf="@id/n5"
        android:insetTop="2dp"
        android:insetBottom="2dp"
        android:text="4"
        android:textColorHint="#C3C3C3"
        android:textColor="#C3C3C3"
        android:textSize="20dp"
        app:strokeColor="#C3C3C3"
        app:strokeWidth="1dp" />
    <Button
        android:id="@+id/n5"
        android:layout_width="90dp"
        android:layout_height="65dp"
        android:backgroundTint="#F1F1F1"
        app:layout_constraintTop_toBottomOf="@id/mul"
        app:layout_constraintEnd_toStartOf="@id/n6"
        android:insetTop="2dp"
        android:insetBottom="2dp"
        android:text="5"
        android:textColor="#C3C3C3"
        android:textSize="20dp"
        app:strokeColor="#C3C3C3"
        app:strokeWidth="1dp" />
    <Button
        android:id="@+id/n6"
        android:layout_width="90dp"
        android:layout_height="65dp"
        android:backgroundTint="#F1F1F1"
        app:layout_constraintTop_toBottomOf="@id/mul"
        app:layout_constraintEnd_toStartOf="@id/min"
        android:insetTop="2dp"
        android:insetBottom="2dp"
        android:text="6"
        android:textColor="#C3C3C3"
        android:textSize="20dp"
        app:strokeColor="#C3C3C3"
        app:strokeWidth="1dp" />
    <Button
        android:id="@+id/min"
        android:layout_width="90dp"
        android:layout_height="65dp"
        android:backgroundTint="#F1F1F1"
        app:layout_constraintTop_toBottomOf="@id/mul"
        app:layout_constraintEnd_toEndOf="@id/number"
        android:insetTop="2dp"
        android:insetBottom="2dp"
        android:text="-"
        android:textColor="#C3C3C3"
        android:textSize="20dp"
        app:strokeColor="#C3C3C3"
        app:strokeWidth="1dp" />
    <Button
        android:id="@+id/n1"
        android:layout_width="90dp"
        android:layout_height="65dp"
        android:backgroundTint="#F1F1F1"
        app:layout_constraintTop_toBottomOf="@id/min"
        app:layout_constraintEnd_toStartOf="@id/n2"
        android:insetTop="2dp"
        android:insetBottom="2dp"
        android:text="1"
        android:textColorHint="#C3C3C3"
        android:textColor="#C3C3C3"
        android:textSize="20dp"
        app:strokeColor="#C3C3C3"
        app:strokeWidth="1dp" />
    <Button
        android:id="@+id/n2"
        android:layout_width="90dp"
        android:layout_height="65dp"
        android:backgroundTint="#F1F1F1"
        app:layout_constraintTop_toBottomOf="@id/min"
        app:layout_constraintEnd_toStartOf="@id/n3"
        android:insetTop="2dp"
        android:insetBottom="2dp"
        android:text="2"
        android:textColor="#C3C3C3"
        android:textSize="20dp"
        app:strokeColor="#C3C3C3"
        app:strokeWidth="1dp" />
    <Button
        android:id="@+id/n3"
        android:layout_width="90dp"
        android:layout_height="65dp"
        android:backgroundTint="#F1F1F1"
        app:layout_constraintTop_toBottomOf="@id/min"
        app:layout_constraintEnd_toStartOf="@id/plus"
        android:insetTop="2dp"
        android:insetBottom="2dp"
        android:text="3"
        android:textColor="#C3C3C3"
        android:textSize="20dp"
        app:strokeColor="#C3C3C3"
        app:strokeWidth="1dp" />
    <Button
        android:id="@+id/plus"
        android:layout_width="90dp"
        android:layout_height="65dp"
        android:backgroundTint="#F1F1F1"
        app:layout_constraintTop_toBottomOf="@id/min"
        app:layout_constraintEnd_toEndOf="@id/number"
        android:insetTop="2dp"
        android:insetBottom="2dp"
        android:text="+"
        android:textColor="#C3C3C3"
        android:textSize="20dp"
        app:strokeColor="#C3C3C3"
        app:strokeWidth="1dp" />
    <Button
        android:id="@+id/pm"
        android:layout_width="90dp"
        android:layout_height="65dp"
        android:backgroundTint="#F1F1F1"
        app:layout_constraintTop_toBottomOf="@id/plus"
        app:layout_constraintEnd_toStartOf="@id/n0"
        android:insetTop="2dp"
        android:insetBottom="2dp"
        android:text="+/-"
        android:textColorHint="#C3C3C3"
        android:textColor="#C3C3C3"
            android:textSize="20dp"
            app:strokeColor="#C3C3C3"
            app:strokeWidth="1dp" />
    <Button
        android:id="@+id/n0"
        android:layout_width="90dp"
        android:layout_height="65dp"
        android:backgroundTint="#F1F1F1"
        app:layout_constraintTop_toBottomOf="@id/plus"
        app:layout_constraintEnd_toStartOf="@id/dot"
        android:insetTop="2dp"
        android:insetBottom="2dp"
        android:text="0"
        android:textColor="#C3C3C3"
        android:textSize="20dp"
        app:strokeColor="#C3C3C3"
        app:strokeWidth="1dp" />
    <Button
        android:id="@+id/dot"
        android:layout_width="90dp"
        android:layout_height="65dp"
        android:backgroundTint="#F1F1F1"
        app:layout_constraintTop_toBottomOf="@id/plus"
        app:layout_constraintEnd_toStartOf="@id/eql"
        android:insetTop="2dp"
        android:insetBottom="2dp"
        android:text="."
        android:textColor="#C3C3C3"
        android:textSize="20dp"
        app:strokeColor="#C3C3C3"
        app:strokeWidth="1dp" />
    <Button
        android:id="@+id/eql"
        android:layout_width="90dp"
        android:layout_height="65dp"
        android:backgroundTint="#5151A2"
        app:layout_constraintTop_toBottomOf="@id/plus"
        app:layout_constraintEnd_toEndOf="@id/number"
        android:insetTop="2dp"
        android:insetBottom="2dp"
        android:text="="
        android:textColor="#C3C3C3"
        android:textSize="20dp"
        app:strokeColor="#C3C3C3"
        app:strokeWidth="1dp" />

    <Button
        android:id="@+id/disconnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Disconnect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/eql" />


</androidx.constraintlayout.widget.ConstraintLayout>